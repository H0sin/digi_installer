# === Base Project ===
COMPOSE_PROJECT_NAME=digitalbot
WEBAPP_IMAGE=ghcr.io/h0sin/digital-web:latest
PROCESSER_IMAGE=ghcr.io/h0sin/digital-processer:latest
CLIENT_APP_IMAGE=ghcr.io/h0sin/digital-client:latest
ORDER_WORKER_IMAGE=ghcr.io/h0sin/digital-order-worker:latest
PROCESSER_REPLICAS=5
ORDER_WORKER_REPLICAS=2

# === PostgreSQL ===
POSTGRES_USER=hossein
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=digitalbot_db

# === RabbitMQ ===
RABBITMQ_USER=hossein
RABBITMQ_PASS=change_this_password
RABBITMQ_HOST=rabbitmq

# === REDIS ===
REDIS_PASSWORD=change_this_password
REDIS_MAXMEMORY=512mb

# === pgAdmin ===
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=change_this_password

# === App & Domains (For DNS and documentation) ===
DOMAIN=yourdomain.com
PGADMIN_DOMAIN=pgadmin.yourdomain.com
PORTAINER_DOMAIN=portainer.yourdomain.com
RABBITMQ_DOMAIN=rabbitmq.yourdomain.com
CLIENT_APP_DOMAIN=client.yourdomain.com
REDISINSIGHT_DOMAIN=redis-insight.yourdomain.com

CERTS_PATH=./certs

# === client
VITE_BASE_API=https://yourdomain.com

# === Telegram Logger ===                                                                         
TELEGRAMLOGGER__ENABLED=false                                                                  
TELEGRAMLOGGER__BOTTOKEN=your_bot_token                     
TELEGRAMLOGGER__CHATID=your_chat_id                                                        
TELEGRAMLOGGER__TOPICS__DEFAULT=19                                                                
TELEGRAMLOGGER__TOPICS__INFORMATION=20                                                            
TELEGRAMLOGGER__TOPICS__WARNING=21                                                                
TELEGRAMLOGGER__TOPICS__ERROR=22                                                                  
TELEGRAMLOGGER__TOPICS__CRITICAL=23                                                               
TELEGRAMLOGGER__TOPICS__ORDERS=24                                                                 
TELEGRAMLOGGER__TOPICS__PAYMENTS=25

# === Traefik (Reverse Proxy & Load Balancer) ===
# Email used for Let's Encrypt notifications and certificate registration
TRAEFIK_ACME_EMAIL=admin@yourdomain.com

# Domain for Traefik dashboard (requires DNS A/AAAA record)
TRAEFIK_DOMAIN=traefik.yourdomain.com

# Preferred certificate resolver: httpresolver (HTTP-01) or dnsresolver (DNS-01 for wildcards)
TRAEFIK_CERT_RESOLVER=httpresolver

# DNS provider for wildcard certificates (optional: cloudflare, route53, etc.)
ACME_DNS_PROVIDER=cloudflare

# Cloudflare API Token for Traefik DNS-01 challenge (scopes: Zone.DNS:Edit for your zone)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Basic auth for Traefik dashboard (optional, format: username:bcrypt_hash)
# Generate with: htpasswd -nbB username password
TRAEFIK_DASHBOARD_AUTH=

# Basic auth for admin interfaces like pgAdmin, Portainer, etc. (optional)
TRAEFIK_ADMIN_AUTH=